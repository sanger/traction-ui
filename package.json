{
  "name": "traction-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:host": "npm-run-all -p serve:css serve:host",
    "start:test": "npm-run-all -p serve:css 'serve -- --mode testing'",
    "start": "npm-run-all -p serve:css serve",
    "serve:host": "vite --host",
    "serve": "vite",
    "build": "npm-run-all build:css build:js",
    "build:js": "vite build",
    "test:unit": "vitest run",
    "test:e2e": "test:e2e:all",
    "test:e2e:all": "npm-run-all -p start:test test:cypress:all",
    "test:e2e:one": "npm-run-all -p start:test test:cypress:one",
    "test:cypress:all": "cypress run",
    "test:cypress:one": "cypress open",
    "lint": "eslint .",
    "pretty": "prettier --check '**/*' --ignore-path .prettierignore",
    "test": "npm-run-all test:unit test:e2e:all",
    "serve:css": "postcss src/styles/tailwind.css -o src/styles/index.css",
    "build:css": "postcss src/styles/tailwind.css -o src/styles/index.css --env production",
    "jsdoc": "./node_modules/.bin/jsdoc -a all -r --configure jsdoc.json --destination docs"
  },
  "dependencies": {
    "@sanger/ui-styling": "^4.3.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "csv-parse": "^6.1.0",
    "global": "^4.4.0",
    "lodash-es": "^4.17.21",
    "pinia": "^3.0.3",
    "postcss": "^8.5.4",
    "swrv": "^1.1.0",
    "tailwindcss": "4.1.13",
    "vite": "^7.1.5",
    "vue": "^3.5.20",
    "vue-router": "^4.5.1",
    "vue3-selecto": "^1.12.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@pinia/testing": "^1.0.2",
    "@vue/test-utils": "^2.4.6",
    "clean-jsdoc-theme": "^4.3.0",
    "cypress": "^15.1.0",
    "cypress-file-upload": "^5.0.8",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "jsdoc": "^4.0.4",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4"
  }
}
