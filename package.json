{
  "name": "traction-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm-run-all -p serve:css serve",
    "serve": "vite",
    "build": "npm-run-all build:css build:js",
    "build:js": "vite build",
    "test:unit": "vitest run",
    "test:e2e": "test:e2e:all",
    "test:e2e:all": "npm-run-all -p start test:cypress:all",
    "test:e2e:one": "npm-run-all -p start test:cypress:one",
    "test:cypress:all": "cypress run",
    "test:cypress:one": "cypress open",
    "lint": "eslint . --ext .js,.vue,.cjs",
    "pretty": "prettier --check '**/*'",
    "test": "npm-run-all test:unit test:e2e:all",
    "serve:css": "postcss node_modules/@sanger/ui-styling/tailwind.css -o src/styles/index.css",
    "build:css": "postcss node_modules/@sanger/ui-styling/tailwind.css -o src/styles/index.css --env production"
  },
  "dependencies": {
    "@sanger/ui-styling": "^4.0.0",
    "@vitejs/plugin-vue2": "^1.1.2",
    "bootstrap-vue": "^2.23.1",
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.5",
    "csv-parse": "^5.3.9",
    "flush-promises": "^1.0.2",
    "global": "^4.4.0",
    "lodash-es": "^4.17.21",
    "swrv": "^1.0.1",
    "postcss": "^8.4.23",
    "vite": "^3.2.4",
    "tailwindcss": "3.2.7",
    "vue": "^2.7.5",
    "vue-router": "^3.5.3",
    "vue-selecto": "^1.22.2",
    "vue-simple-spinner": "^1.2.10",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.3",
    "cypress": "^10.9.0",
    "cypress-file-upload": "^5.0.8",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.10.0",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "prettier": "2.8.8",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "^1.58.3",
    "vitest": "^0.15.2",
    "vue-template-compiler": "^2.7.5"
  }
}
