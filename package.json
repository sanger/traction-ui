{
  "name": "traction-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm-run-all -p serve:css serve",
    "serve": "vite",
    "build": "npm-run-all build:css build:js",
    "build:js": "vite build",
    "test:unit": "vitest run",
    "test:e2e": "test:e2e:all",
    "test:e2e:all": "npm-run-all -p start test:cypress:all",
    "test:e2e:one": "npm-run-all -p start test:cypress:one",
    "test:cypress:all": "cypress run",
    "test:cypress:one": "cypress open",
    "lint": "eslint . --ext .js,.vue,.cjs",
    "pretty": "prettier --check '**/*'",
    "test": "vue-cli-service test:unit && vue-cli-service test:e2e",
    "serve:css": "postcss node_modules/@sanger/ui-styling/tailwind.css -o src/styles/index.css",
    "build:css": "postcss node_modules/@sanger/ui-styling/tailwind.css -o src/styles/index.css --env production"
  },
  "dependencies": {
    "@sanger/ui-styling": "^4.0.0",
    "autoprefixer": "^10.4.7",
    "axios": "^0.21.4",
    "bootstrap-vue": "^2.22.0",
    "core-js": "^3.23.1",
    "csv-parse": "^5.1.0",
    "flush-promises": "^1.0.2",
    "global": "^4.4.0",
    "lodash-es": "^4.17.21",
    "postcss": "^8.4.14",
    "tailwindcss": "2.2.19",
    "vite": "^2.9.12",
    "vite-plugin-vue2": "^2.0.1",
    "vue": "^2.6.12",
    "vue-router": "^3.5.3",
    "vue-selecto": "^1.16.2",
    "vue-simple-spinner": "^1.2.10",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.3",
    "cypress": "^10.2.0",
    "cypress-file-upload": "^5.0.8",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.1.1",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "prettier": "2.7.1",
    "sass": "^1.53.0",
    "vitest": "^0.15.2",
    "vue-template-compiler": "^2.6.12"
  }
}
